{% extends "SymfonyseAuthorBundle::base.html.twig" %}

{% block title %}
{{author.title}} â€” {{parent()}}
{% endblock %}

{% block contentWrap %}
    <div class="container">
        <div class="row">

            <div class="col-sm-12">
                <div class="row">
                    <div class="col-sm-3">
                        <div class="user-avatar text-center">
                            <img class="img-responsive center-block" src="{{ asset(getAuthorPhoto(author)) }}">
                            {{author.title}}
                            <p class="text-muted">{{author.meta("jobtitle")}}</p>
                        </div>
                    </div>
                    <div class="col-sm-7">
                        <h3 class="second-child">{{author.title}}</h3>
                        <p class="text-muted">
                            {{ author.content|markdown }}
                        </p>
                        <p><a href="{{author.meta("website")}}">{{author.meta("website")}}</a></p>
                        <div class="social user-social">
                            <ul class="list-inline">
                                {% if author.meta('twitter') %}
                                    <li><a href="https://twitter.com/{{ author.meta('twitter') }}" class="twitter"><i class="fa fa-twitter"></i></a></li>
                                {% endif %}
                                {% if author.meta('facebook') %}
                                    <li><a href="https://www.facebook.com/{{ author.meta('facebook') }}" class="facebook"><i class="fa fa-facebook"></i></a></li>
                                {% endif %}
                                {% if author.meta('linkedin') %}
                                    <li><a href="http://se.linkedin.com/in/{{ author.meta('linkedin') }}" class="linkedin"><i class="fa fa-linkedin"></i></a></li>
                                {% endif %}
                                {% if author.meta('github') %}
                                    <li><a href="https://github.com/{{ author.meta('github') }}" class="github"><i class="fa fa-github"></i></a></li>
                                {% endif %}

                            </ul>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <hr class="arrow-down">
                            {% for entry in entries %}
                                {% if entry.type == 'blog' %}
                                    {% include "@SymfonyseBlog/Blog/extract.html.twig" %}
                                {% elseif entry.type == 'video' %}
                                    {% include "@SymfonyseVideo/Video/extract.html.twig" %}
                                {% endif %}
                            {% endfor %}
                    </div>
                </div>
            </div>
        </div> <!-- / .row -->
    </div> <!-- / .container -->
{% endblock %}

