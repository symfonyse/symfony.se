{% macro video(youtubeCode) %}
    <div class="video-container">
        <iframe width="420" height="315" src="//www.youtube.com/embed/{{ youtubeCode }}" frameborder="0" allowfullscreen></iframe>
    </div>
{% endmacro %}

{% macro meta(video) %}
    {% import "SymfonyseCoreBundle:Macro:misc.html.twig" as _misc %}

    <i class="fa-video-camera"></i> Inspelad: {{ _misc.date(video.recordedAt, 'medium') }}<br />
    <i class="fa-user"></i> Medverkande: {{ _misc.authors(video.meta('authors')) }}
{% endmacro %}