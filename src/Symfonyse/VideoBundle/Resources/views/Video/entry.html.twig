{% extends "SymfonyseVideoBundle::base.html.twig" %}

{% block title %}
{{video.title}} â€” {{parent()}}
{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <li>Video</li>
{% endblock %}

{% block contentWrap %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                {{ _macro.video(video.meta('youtube')) }}
            </div>
            <div class="col-sm-6">
                <h3 class="headline second-child"><span>{{ video.title }}</span></h3>
                {{ video.content|markdown }}
                <br />
                <h4 class="headline"><span>Info</span></h4>
                <table class="table">
                    <tbody>
                    <tr>
                        <td><i class="fa-user"></i> Medverkande<td>
                        <td>{{ _misc.authors(video.meta('authors')) }}</td>
                    </tr>
                    <tr>
                        <td><i class="fa-tags"></i> Taggar<td>
                        <td>{{ _misc.tags(video.meta('tags')) }}</td>
                    </tr>
                    <tr>
                        <td><i class="fa-video-camera"></i> Inspelad<td>
                        <td>{{ _misc.date(video.recordedAt, 'medium') }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div> <!-- / .row -->

    </div> <!-- / .container -->
{% endblock %}